{% extends "layout.html.twig" %}

{% block body %}
	<form>
		<div class="content">
			<div class="result">Started</div>
			<div class="error"></div>
			{% for i in range(1, size|default(3)) %}
				<div class="row">
					{% for j in range(1, size|default(3)) %}
						<div class="col">
							<input type="text" name="board[]" maxlength="1">
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	</form>
{% endblock %}

{% block scripts %}
	{{ parent() }}
	<script type="text/javascript">{{ include('tictactoe.js') }}</script>
{% endblock %}

{% block styles %}
	{{ parent() }}
	<style type="text/css">
		.content {
			display: flex;
			flex-direction: column;
			width: 100%;
			height: 100vh;
		}
		.row {
			display: flex;
			justify-content: space-around;
			height: 100%;
		}
		.col {
			width: 100%;
		}
		.col input {
			height: 100%;
			width: 100%;
			line-height: 10vw;
			font-size: 10vw;
			text-align: center;
			outline: none;
		}
		.result,
		.error {
			color: white;
			text-align: center;
			font-family: sans-serif;
			padding: 1rem 0;
		}
		.result {
			background: green;
		}
		.error {
			background: red;
			display: none;
		}
	</style>
{% endblock %}
